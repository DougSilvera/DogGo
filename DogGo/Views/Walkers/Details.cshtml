@model DogGo.Models.ViewModels.WalkerProfileViewModel

@{
    ViewData["Title"] = "Details";
}



<div>
    <h1 class="mb-4">@Model.Walker.Name</h1>
    <section class="container">
         <img
      style="width:100px;float:left;margin-right:20px"
      src="@Model.Walker.ImageUrl" alt="profile picture"
    />
    <div>
      <label class="font-weight-bold">Name</label>
      <span>@Model.Walker.Name</span>
    </div>
     <div>
      <label class="font-weight-bold">Neighborhood</label>
      <span>@Model.Walker.Neighborhood.Name</span>
    </div>
    </section>

    <hr class="mt-5" />
  <div class="clearfix"></div>
  <div class="table">
      <section class="col-8 container mt-5">
      <table class="table">
          <thead>
              <tr>
                  <th>
                      <label>Walk Id</label>
                  </th>
                  <th>
                      <label>Client Name</label>
                  </th>
                  <th>
                      <label>Walk Duration</label>
                  </th>
              </tr>
          </thead>
          <tbody>
              @foreach (Walk walk in Model.Walks)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => walk.Id)
                            </td>
                             <td>
                                @Html.DisplayFor(modelItem => walk.Owner.Name)
                            </td>
                             <td>
                                @Html.DisplayFor(modelItem => walk.Duration)
                            </td>
                        </tr>
                    }
                </tbody>
      </table>

      </section>
  </div>


</div>    
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Walker.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
